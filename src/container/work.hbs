{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
        <main>
            <section>
                {{> title big=true data='Work history'}}
                <div>
                    <ul>
                        {{#each works}}
                            <li>
                                <div>{{position}}</div>
                                <br>
                                <div>
                                    {{duration.from}} -
                                    {{#if duration.to}}
                                        {{duration.to}} 
                                    {{else}} 
                                        (досі тут працюю) 
                                    {{/if}} 
                                </div>
                                <br>
                                <div>
                                    {{#if company.url}}
                                        {{> link text=company.name href=company.url blank=true noLine=true}}
                                    {{else}}
                                        {{company.name}}
                                    {{/if}}
                                </div>
                                <br>
                                <br>
                                <div>
                                    <strong>Projects ({{projectAmount}})</strong>
                                </div>
                                <br>
                                <ul>
                                    {{#each projects}}
                                        <li>
                                            <div>{{> link text=name href=url blank=true noLine=true}}</div>
                                            <br>
                                            <div>{{about}}</div>
                                            <br>
                                                <em><strong>Project stacks ({{stackAmount}})</strong></em>
                                            <br>
                                            <br>
                                            {{#each stacks}}
                                            <li>
                                                {{name}}
                                            </li>
                                            {{/each}}
                                            <br>
                                                <em><strong>Project awards ({{awardAmount}})</strong></em>
                                            <br>
                                            <br>
                                            {{#each awards}}
                                            <li>
                                                {{name}}
                                            </li>
                                            {{/each}}
                                        </li>
                                    {{/each}}
                                </ul>
                            </li>
                        {{/each}}
                    </ul>
                </div>
        </main>
    {{/with}}
</div>

