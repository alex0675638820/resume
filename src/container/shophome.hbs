<main class="row m-2">
   <section class="col-12 nav">
        <div class="card col-12">
            <div class="nav">
                {{#with navigation}}
                    {{#each links}}
                        <a href="{{href}}" class="btn-primary mx-2">{{text}}</a> 
                    {{/each}}
                    <div>
                         <a href="#" class="nav-link disabled p-0 ms-4">Sales</a>
                    </div>
                {{/with}}
            </div> 
        </div>
   </section>
   <section class="row">
        {{#with newsBlock}}
            <h2 class="text-center col-12">{{title}}</h2>
            {{#each cards}}
                <div class="card col-4">
                    <div class="m-0 text-bg-dark">
                        <div class="card-body m-0 py-1 px-2">
                            <h6>{{title}}
                                <div>
                                    <span class="badge text-bg-success rounded-pill text-uppercase">{{isNew}}</span>
                                    <span class="badge text-bg-danger rounded-pill text-uppercase">{{isTop}}</span>
                                </div>
                            </h6>
                            <d>{{description}}</d>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/with}}
   </section>
   <hr>
   <section>
         <div class="col-12 mb-5">
            <div class="nav nav-tabs">
                {{#with goodsBlock}}
                    {{#each tabs}}
                        <div class="nav-item ">
                            {{#if isActive}}
                                <a href="#" class="nav-link active">{{text}}</a>
                                {{else}}
                                {{#if isDisabled}}       
                                <a href="#" class="nav-link disabled">{{text}}</a>
                                {{else}}
                                <a href="#" class="nav-link">{{text}}</a>  
                                {{/if}}
                            {{/if}}
                        </div>
                    {{/each}}
                    <section class="col-12">
                        <div class="row gx-2 gy-2">
                            {{!-- <div class="card col-4"> --}}
                                {{#each cards}}
                                    <div class="card col-3 m-3 p-0">
                                        <img class="card-img-top" src={{image}} "Product photo">
                                        <div class="p-1">
                                            <h5 class="card-title">{{title}}</h5>
                                            <div>
                                                {{#if isHot}}
                                                    <span class="badge text-bg-warning rounded-pill text-uppercase">{{isHot}}</span>
                                                {{else}}
                                                    <span disabled class="badge text-bg-warning rounded-pill text-uppercase">{{isHot}}</span>
                                                {{/if}}
                                                {{#if isNew}}
                                                    <span class="badge text-bg-primery rounded-pill text-uppercase">{{isNew}}</span>
                                                {{else}}
                                                    <span disabled class="badge text-bg-warning rounded-pill text-uppercase">{{isNew}}</span>
                                                {{/if}}
                                            </div>
                                            <p>{{description}}</p>
                                        </div>
                                    </div>
                                {{/each}}
                            </div>
                        </div>        
                    </section>
                {{/with}}
            </div>
        </div>
   <hr>
   <section class="col-12">
        <div class="card col-12 text-bg-dark p-3">
            {{#with subscribe}}
                <h2>{{header}}</h2>
                <p class="gy-2">{{description}}</p>
                <a href="{{buttons.[0].link}}" class="btn btn-primary col-3 my-1">{{buttons.[0].text}}</a> 
                <a href="{{buttons.[1].link}}" class="btn btn-primary col-4 my-1">{{buttons.[1].text}}</a> 
            {{/with}}
        </div>
   </section>
   <hr>
   <section class="row">
        <div class="card col-12 text-bg-warning p-3 text-center">
            {{#with service}}
                <h2 class="col-12 text-center">{{service}}</h2>
                <p class="gy-2">{{description}}</p>
                {{#each buttons}}
                    <div class="text-center">
                        <button href="{{link}}" class="btn btn-primary col-3 my-1">{{text}}</button> 
                    </div>
                {{/each}}
            {{/with}}
        </div>
   </section>
   <hr>
   <footer class="col-11">
        <div class="row">
            {{#each footer}}
                <div class="nov-item col-2 p-0 m-2">
                    <a href="{{[0].link}}" class="nav nav-link p-0 pb-2 active">{{[0].text}}</a>
                    <a href="{{[1].link}}" class="nav nav-link p-0 pb-2 active">{{[1].text}}</a>
                    <a href="{{[2].link}}" class="nav nav-link p-0 pb-2 active">{{[2].text}}</a>
                    <a href="{{[3].link}}" class="nav nav-link p-0 pb-2 disabled">{{[3].text}}</a>
                </div>
            {{/each}}
        </div>
   </footer>
</main>