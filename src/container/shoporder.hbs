<main class="row p-2 ">
    <div class="row">
        <div class="card">
            <div class="nav p-2 ">
                {{#with navigation}}
                    {{#each links}}
                        <a href="{{href}}" class="btn-primary mx-2 {{#if @last}} nav-link disabled pt-0 {{/if}}">{{text}}</a>
                    {{/each}}
                {{/with}}
            </div> 
        </div>
        <h2 class="mb-5">{{header}}</h2>
        <div class="col-8">
            {{#with contacts_data}}
                <h4>{{title}}</h4>
                <div class="mt-2 mb-3">
                    {{#each buttons}}
                        {{#if isPrimary}}
                        <button class="btn btn-primary">{{text}}</button>
                        {{else}}
                        <button class="btn btn-outline-primary ">{{text}}</button>
                        {{/if}}
                    {{/each}}
                </div>
                <div class="row">
                    <div>
                        {{#with form}}
                            <div class="row">
                                {{#with input}}
                                        {{#with surname}}
                                            <div class="col-5 m-1 p-0">
                                                <label class="form-label">{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text text-danger">{{caption}}</div>
                                            </div> 
                                        {{/with}}
                                        {{#with name}}
                                            <div class="col-5 m-1 p-0">
                                                <label class="form-label">{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text text-danger">{{caption}}</div>
                                            </div> 
                                        {{/with}}
                                        {{#with phone}}
                                            <div class="col-5 m-1  p-0">
                                                <label class="form-label">{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text text-danger">{{caption}}</div>
                                            </div> 
                                        {{/with}}
                                        {{#with email}}
                                            <div class="col-5 m-1 p-0">
                                                <label class="form-label">{{label}}</label>
                                                <input class="form-control" placeholder="{{placeholder}}">
                                                <div class="form-text text-danger">{{caption}}</div>
                                            </div> 
                                        {{/with}}
                                {{/with}}
                            </div>
                            <div class="col-8">
                                <hr>
                                {{#each switch}}
                                    <div class="form-check form-switch">
                                        <label class="form-check-label">{{text}}</label>
                                        {{#if isActive}}
                                            <input name="{{text}}" type="checkbox" class="form-check-input">
                                        {{else}}
                                            <input name="{{text}}" type="checkbox" class="form-check-input disabled">
                                        {{/if}}
                                    </div>
                                {{/each}}
                                 <hr>
                            </div>
                        {{/with}}
                    </div> 
                </div>
            {{/with}}
            <div class="row">
                {{#with delivery}}
                    <h4 class="my-3">{{title}}</h4>
                    <div class="col-8">
                        <div class="row">
                            <div class="card">
                                <div class="card-bady col-4">
                                    {{#each select}}
                                        <label class="form-label mt-2">{{label}}</label>
                                        <select class="form-select">
                                            <option selected> {{placeholder}}</option>
                                            {{#each options}}
                                                <option {{value}}="1">{{text}}</option>
                                            {{/each}}
                                        </select>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div>
                        {{#each delivery_type}}
                            <div class="form-check mt-3 mb-4">
                                <label class="form-check-label">{{type}}</label>
                                <input name="delivery" type="radio" class="form-check-input">
                            </div>
                        {{/each}}
                    </div>
                    <hr>
                    <div>
                        {{#with payment}}
                            <h4 class="my-3">{{title}}</h4>
                            {{#each list}}
                                <div class="form-check mt-3 mb-4">
                                    <label class="form-check-label">{{type}}</label>
                                    <input name="delivery" type="radio" class="form-check-input">
                                </div>
                                <p>{{description}}</p>
                            {{/each}}
                        {{/with}}
                    </div>
                    <hr>
                    </div>
                    <div>
                        {{#with contact}}
                            <h4 class="my-3">{{title}}</h4>
                            <div class="row">
                                {{#with surname}}
                                    <div class="col-5 m-1 p-0">
                                        <label class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text text-danger">{{caption}}</div>
                                    </div> 
                                {{/with}}
                                {{#with name}}
                                    <div class="col-5 m-1 p-0">
                                        <label class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text text-danger">{{caption}}</div>
                                    </div> 
                                {{/with}}
                                {{#with phone}}
                                    <div class="col-5 m-1  p-0">
                                        <label class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text text-danger">{{caption}}</div>
                                    </div> 
                                {{/with}}
                                {{#with email}}
                                    <div class="col-5 m-1 p-0">
                                        <label class="form-label">{{label}}</label>
                                        <input class="form-control" placeholder="{{placeholder}}">
                                        <div class="form-text text-danger">{{caption}}</div>
                                    </div> 
                                {{/with}}
                                <hr class="my-2">
                            </div>
                        {{/with}}
                    </div> 
                    {{#with coment}}
                    <div class="form form-label mt-2">
                        <label class="form-label ">{{label}}</label>
                        <input class="form-control " placeholder="{{placeholder}}">
                    </div>
                    {{/with}} 
                     <hr class="my-4">
                {{/with}}
                {{#with coupon}}
                    <h4 class="my-3">{{title}}</h4>
                    <div class="row p-2">
                        {{#with select}}
                            {{#with availabel_coupon}}
                                <label class="form-label mt-2">{{label}}</label>
                                <select class="form-select form-select-lg">
                                    <option selected> {{placeholder}}</option>
                                    {{#each options}}
                                        <option {{value}}="1">{{text}}</option>
                                    {{/each}}
                                </select>
                            {{/with}}
                            {{#with friend_coupon}}
                                <label class="form-label mt-3">{{label}}</label>
                                <select class="form-select form-select-sm">
                                    <option selected> {{placeholder}}</option>
                                    {{#each options}}
                                        <option {{value}}="1">{{text}}</option>
                                    {{/each}}
                                </select>
                            {{/with}}
                        {{/with}}
                        {{#with add}}
                            {{#with friend}}
                                <label class="form-label mt-3">{{label}}</label>
                                <select class="form-control form-control-lg"><option selected>{{placeholder}}</option></select>
                                <div class="form-text text-danger ps-2">{{caption}}</div>
                            {{/with}}
                            {{#with colleague}}
                                <label class="form-label mt-3">{{label}}</label>
                                <select class="form-control form-control-lg"><option selected> {{placeholder}}</option></select>
                                <div class="form-text text-danger">{{caption}}</div>
                            {{/with}}
                            <hr class="mt-3">
                        {{/with}}
                    </div>
                {{/with}}
                {{#with quiz}}
                    <div class="row">
                        <h5 class="my-2 mx-0">{{title}}</h5>
                        {{#with preference}}
                            <h6 class="my-1">{{title}}</h6>
                            {{#each options}}
                                <div class="form-check mt-2 mb-1 ms-2">
                                <label class="form-check-label">{{this}}</label>
                                <input name="delivery" type="radio" class="form-check-input">
                            </div>
                            {{/each}}
                        {{/with}}
                    </div>
                    {{#with your_expirience}}
                        <div class="form form-label mt-2">
                            <label class="form-label">{{label}}</label>
                            <input class="form-control">
                        </div>
                    {{/with}}
                    {{#with purchase_frequency}}
                        <label class="form-label mt-2">{{label}}</label>
                        <select class="form-select form-select-sm">
                            <option selected> {{placeholder}}</option>
                            {{#each options}}
                                <option {{value}}="1">{{text}}</option>
                            {{/each}}
                        </select>
                    {{/with}}
                    {{#with factors}}
                        <h6 class="py-3 mx-0">{{title}}</h6>
                        {{#each options}}
                            <div class="form-check">
                                <label class="form-check-label">{{this}}</label>
                                <input name="food" type="checkbox" class="form-check-input">
                            </div>
                        {{/each}}
                    {{/with}}
                {{/with}}
            </div>
            <div class="col-4">
                {{#each action_block}}
                    {{#if isSuccess}}
                        <button class="btn btn-success">{{text}}</button>
                        {{else}}
                        <br>
                        {{#if isDanger}}
                            <button class="btn btn-danger my-2">{{text}}</button>
                            {{else}}
                            {{#if isInfo}}
                                <button class="btn btn-info">{{text}}</button>
                            {{/if}}
                        {{/if}} 
                    {{/if}}
                {{/each}}
                <div class="p-1"> 
                    {{#with total}}
                        <h4 class="my-3">{{title}}</h4>
                        {{#each item_list}}
                        <b>{{name}} : {{price}}</b>
                        {{/each}}
                        <hr>
                        {{#each additional_info}}
                        <b>{{text}} : {{value}}</b>
                        {{/each}}
                        <hr>
                        {{#with total_price}}
                        <b>{{text}} : {{value}}</b>
                        {{/with}}
                        <hr>
                        {{#each button}}
                            {{#if isPrimary}}
                                <button class="btn btn-primary my-2 p-1">{{text}}</button>
                                {{else}}
                                <br>
                                {{#if isOutline}}
                                    <button class="btn btn-outline-primary p-1">{{text}}</button>
                                {{/if}} 
                            {{/if}}
                        {{/each}}
                    {{/with}}
                </div>
            </div>
        </div>
    </div>
    <hr class="mt-5">
    <footer class="col-11">
        <div class="row">
            {{#each footer}}
                <div class="nov-item col-2 p-0 m-2">
                    <a href="{{[0].link}}" class="nav nav-link p-0 pb-2 active">{{[0].text}}</a>
                    <a href="{{[1].link}}" class="nav nav-link p-0 pb-2 active">{{[1].text}}</a>
                    <a href="{{[2].link}}" class="nav nav-link p-0 pb-2 active">{{[2].text}}</a>
                    <a href="{{[3].link}}" class="nav nav-link p-0 pb-2 disabled">{{[3].text}}</a>
                </div>
            {{/each}}
        </div>
   </footer>
</main>